<?xml version="1.0" encoding="UTF-8"?>
<web-app
    id="elicom"
    version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd"
>
    <display-name>Elicom</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <mime-mapping>
        <extension>ndjson</extension>
        <mime-type>text/plain; charset=utf-8</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript; charset=utf-8</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/vnd.api+json; charset=utf-8</mime-type>
    </mime-mapping>
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
        <!-- for dev -->
        <init-param>
            <param-name>confReloadCheckInterval</param-name>
            <param-value>10</param-value>
        </init-param>
        <init-param>
            <param-name>logLevel</param-name>
            <!-- TRACE, DEBUG, INFO (default), WARN, ERROR, FATAL, -->
            <param-value>DEBUG</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <jsp-config>
        <jsp-property-group>
            <display-name>Elicom</display-name>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/jsp/prelude.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>