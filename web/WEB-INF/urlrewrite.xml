<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN" "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<!--

    Configuration file for UrlRewriteFilter
    http://www.tuckey.org/urlrewrite/

-->
<urlrewrite>

    <rule>
        <name>Resource exists</name>
        <condition type="request-filename" operator="isfile"/>
        <to last="true">-</to>
    </rule>


    <rule>
        <name>Data, correspondents suggestion</name>
        <condition type="request-filename" operator="notfile"/>
        <from>^/data/(corres1|corres2|receiver|sender)(\.ndjson|\.js|\.json)?$</from>
        <set name="path">$0</set>
        <to last="true">/data/corres.jsp?f=$1&amp;ext=$2</to>
    </rule>


    <rule>
        <name>Data multi formats</name>
        <condition type="request-filename" operator="notfile"/>
        <from>^/data/([^\./]+)(\.csv|\.js|\.json|\.ndjson|\.tsv|\.txt)?$</from>
        <set name="path">$0</set>
        <to last="true">/data/$1.jsp?ext=$2</to>
    </rule>


    <rule>
        <name>Catch all</name>
        <condition type="request-filename" operator="notfile"/>
        <condition type="request-filename" operator="notdir"/>
        <set name="path">$0</set>
        <to last="true">/jsp/page.jsp</to>
    </rule>


